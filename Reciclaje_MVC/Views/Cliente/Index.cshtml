                <div class="row g-5">

                    @*//---------------------------------*@
                    <div class="col-lg-12 col-md-12">
                        <div class="card card-header-stretch card-bordered mb-5">
                            <div class="card-header border-top p-9">
                                <div class="card-title m-0">
                                    <h3 class="fw-bolder m-0">Datos Personales</h3>
