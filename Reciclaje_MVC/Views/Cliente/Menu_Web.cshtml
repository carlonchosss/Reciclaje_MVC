    <div id="appModulo">

        <div class="post d-flex flex-column-fluid" id="kt_post">
            <!--begin::Container-->
            <div id="kt_content_container" class="container-xxl">


                @*//---------------------------------*@
                <div class="row g-5">

                    @*//---------------------------------*@
                    <div class="col-lg-12 col-md-12">
                        <div class="card card-header-stretch card-bordered mb-5">
                            <div class="card-header border-top p-9">
                                <div class="card-title m-0">
                                    <h3 class="fw-bolder m-0">Datos Modulo</h3>
                                </div>
                                <button type="button" class="btn btn-primary" v-on:click="agregar_datos_cliente()">
                                    Agregar Modulo
                                </button>
                            </div>
                            <div class="card-body border-top p-9">
                                @*<<-------->*@
                                <table id="tabla_cliente_responsivo" class="table table-striped border rounded gy-5 gs-7">
                                    <thead>
                                        <tr class="fw-bolder fs-6 text-gray-800 px-7">
                                            <th data-priority="1">ID</th>
                                            <th data-priority="2">Descripcion</th>
                                            <th data-priority="5">Url</th>
                                            <th data-priority="5">Estado</th>   
                                            <th data-priority="3">Accion</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr v-for="(listas, index) in ListarPerfiles" :key="listas.codigo_menu">
                                            @*<td>{{listas.codigo_menu}}</td>*@
                                            <th>{{index + 1}}</th>
                                            <td>{{listas.descripcion}}</td>
                                            <td>{{listas.url}}</td>
                                            <td v-if="listas.habilitado ==1"><span class="badge badge-light-primary fw-bold">Habilitado</span></td>
                                            <td v-else="listas.habilitado ==0"><span class="badge badge-light-danger fw-bold">Deshabilitado</span></td>
                                            <td name="bstable-actions">
                                                <div class="btn-list">
                                                    <button id="btn_editar_cliente" type="button" class="btn btn-sm btn-primary" v-on:click="obtener_datos_cliente(listas)">
                                                        <span class="fas fa-user-edit fs-4 me-0"> </span>
                                                    </button>
                                                    <button v-if="listas.habilitado ==1" id="btn_eliminar_cliente" type="button" class="btn  btn-sm btn-danger" v-on:click="deshabilitar_datos_cliente(listas.codigo_menu)">
                                                        <span class="fas fa-user-times fs-4 me-0"> </span>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                </table>
                                @*<<-------->*@

                            </div>
                        </div>
                    </div>
                    @*//---------------------------------*@

                </div>
                @*//---------------------------------*@

                <div class="modal fade" tabindex="-1" id="modal_formulario_modulo">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">{{titulo_modal_modulo}}</h5>

                                <!--begin::Close-->
                                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                                    <span class="svg-icon svg-icon-2x"></span>
                                </div>
                                <!--end::Close-->
                            </div>

                            <div class="modal-body">
                                <form class="needs-validation" data-vv-scope="form_modal_datos_modulo">

                                    <div class="card-body border-top p-9">
                                        @*<<-------->*@
                                        <div class="row mb-6">
                                            <div class="col-md-6 fv-row fv-plugins-icon-container">
                                                <label class="required fs-6 fw-bold mb-2">Descripcion Modulo</label>

                                                <input id="descripcion_modulo"
                                                       type="text"
                                                       name="descripcion_modulo"
                                                       placeholder="Ingrese Modulo"
                                                       v-model="descripcion_modulo"
                                                       v-validate="'required|max:50'"
                                                       v-bind:class="{'is-invalid': errors.has('form_modal_datos_modulo.descripcion_modulo')}"
                                                       class="form-control form-control-solid">
                                                <span v-show="errors.has('form_modal_datos_modulo.descripcion_modulo')" class="fv-plugins-message-container invalid-feedback">{{ errors.first('form_modal_datos_modulo.descripcion_modulo') }}</span>
                                            </div>
                                            <div class="col-md-6 fv-row fv-plugins-icon-container">
                                                <label class="required fs-6 fw-bold mb-2">Url Modulo</label>

                                                <input id="descripcion_url"
                                                       type="text"
                                                       name="descripcion_url"
                                                       placeholder="Ingrese Modulo"
                                                       v-model="descripcion_url"
                                                       v-validate="'required|max:50'"
                                                       v-bind:class="{'is-invalid': errors.has('form_modal_datos_modulo.descripcion_url')}"
                                                       class="form-control form-control-solid">
                                                <span v-show="errors.has('form_modal_datos_modulo.descripcion_url')" class="fv-plugins-message-container invalid-feedback">{{ errors.first('form_modal_datos_modulo.descripcion_url') }}</span>
                                            </div>
                                        </div>
                                        @*<<-------->*@
                                        <div class="row mb-6">
                                            <div class="col-md-6 fv-row fv-plugins-icon-container" v-if="codigo_menu>0">
                                                <label class="required fs-6 fw-bold mb-2">Estado</label>

                                                <div class="form-check form-switch form-check-custom form-check-solid">
                                                    <input id="estado"
                                                           type="checkbox"
                                                           name="estado"
                                                           v-model="estado"
                                                           checked="checked"
                                                           class="form-check-input">
                                                </div>
                                            </div>
                                        </div>
                                        @*</-------->*@
                                    </div>
                                </form>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-light" data-bs-dismiss="modal" v-on:click="limpiar_campos()">Cerrar</button>
                                <button type="submit" v-if="codigo_menu==0" v-on:click.prevent="guardar_datos_modal_modulo" class="btn btn-primary">Guardar</button>
                                <button type="submit" v-else class="btn btn-danger" v-on:click.prevent="guardar_datos_modal_modulo">Actualizar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--end::Container-->
