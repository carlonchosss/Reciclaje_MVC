                @*//---------------------------------*@
                <div class="row g-5">

                    @*//---------------------------------*@
                    <div class="col-lg-12 col-md-12">
                        <div class="card card-header-stretch card-bordered mb-5">
                            <div class="card-body border-top p-9">
                                @*<<-------->*@
                                <table id="tabla_cliente_responsivos_reciclaje" class="table table-striped border rounded gy-5 gs-7">
                                    <thead>
                                        <tr class="fw-bolder fs-6 text-gray-800 px-7">
                                            <th data-priority="1">ID</th>
                                            <th data-priority="2">Codigo Interno</th>
                                            <th data-priority="2">Usuario</th>
                                            <th data-priority="2">Empresa Descuento</th>
                                            <th data-priority="2">Puntos Descuento</th>
                                            <th data-priority="2">Descuento Aplicado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr v-for="(listas, index) in ListarReporteUsuario" :key="listas.codigo_puntos_detallados">
                                            <th>{{index + 1}}</th>
                                            <td>{{listas.codigo_puntos_detallados}}</td>
                                            <td>{{listas.nombre}}</td>
                                            <td>{{listas.descripcion_empresa_descuento}}</td>
                                            <td>{{listas.puntos_canjeados}}</td>
                                            <td>{{listas.descuento_aplicado}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                                @*<<-------->*@

                            </div>
                        </div>
                    </div>

                </div>
