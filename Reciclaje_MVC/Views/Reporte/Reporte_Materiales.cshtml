                @*//---------------------------------*@
                <div class="row g-5">

                    @*//---------------------------------*@
                    <div class="col-lg-12 col-md-12">
                        <div class="card card-header-stretch card-bordered mb-5">
                            <div class="card-body border-top p-9">
                                @*<<-------->*@
                                <table id="tabla_cliente_responsivos_reciclaje" class="table table-striped border rounded gy-5 gs-7">
                                    <thead>
                                        <tr class="fw-bolder fs-6 text-gray-800 px-7">
                                            <th data-priority="1">ID</th>
                                            <th data-priority="2">Codigo Interno</th>
                                            <th data-priority="2">Codigo Interno Detallado</th>
                                            <th data-priority="2">Fecha Registro</th>
                                            <th data-priority="2">Nombre</th>
                                            <th data-priority="2">Categoria</th>
                                            <th data-priority="2">Material</th>
                                            <th data-priority="2">Cantidad</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr v-for="(listas, index) in ListarReporteUsuario">
                                            <th>{{index + 1}}</th>
                                            <td>{{listas.codigo_registro_reciclaje}}</td>
                                            <td>{{listas.codigo_registro_reciclaje_detalle}}</td>
                                            <td>{{listas.fecha_creacion_registro}}</td>
                                            <td>{{listas.nombre}}</td>
                                            <td>{{listas.descripcion_categoria}}</td>
                                            <td>{{listas.descripcion_producto}}</td>
                                            <td>{{listas.cantidad}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                                @*<<-------->*@

                            </div>
                        </div>
                    </div>

                </div>
