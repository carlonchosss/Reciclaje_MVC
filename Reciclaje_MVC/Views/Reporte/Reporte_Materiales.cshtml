    <div id="appRegistroUsuarioAdmin">

        <div class="post d-flex flex-column-fluid" id="kt_post">
            <!--begin::Container-->
            <div id="kt_content_container" class="container-xxl">

                <div class="card mb-5 mb-xl-10">
                    <!--begin::Card header-->
                    <div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="kt_account_profile_details">
                        <!--begin::Card title-->
                        <div class="card-title m-0">
                            <h3 class="fw-bolder m-0">Reporte Materiales</h3>
                        </div>
                        <!--end::Card title-->
                    </div>
                    <!--begin::Card header-->
                    <!--begin::Content-->
                    <div id="kt_account_settings_profile_details" class="collapse show">
                        <!--begin::Form-->
                        <form class="form fv-plugins-bootstrap5 fv-plugins-framework" data-vv-scope="formdatosreporte" novalidate="novalidate">
                            <!--begin::Card body-->
                            <div class="card-body border-top p-9">
                                <!--begin::Input group-->
                                <div class="row mb-6">
                                    <!--begin::Col-->
                                    <div class="col-lg-12">
                                        <!--begin::Row-->
                                        <div class="row">
                                            <!--begin::Col-->
                                            <div class="col-lg-4 fv-row fv-plugins-icon-container">
                                                <label for="" class="form-label required fw-bold fs-6">Fecha Inicio:</label>
                                                <input id="fecha_inicio_reporte"
                                                       type="text"
                                                       name="fecha_inicio_reporte"
                                                       placeholder="Seleccione una Fecha"
                                                       v-model="fecha_inicio_reporte"
                                                       aria-describedby="fecha_inicio_reporte"
                                                       autofocus=""
                                                       tabindex="1"
                                                       v-validate="'required|date_format:dd/MM/yyyy'"
                                                       v-bind:class="{'is-invalid': errors.has('formdatosreporte.fecha_inicio_reporte') }"
                                                       class="form-control form-control-solid" />
                                                <span v-show="errors.has('formdatosreporte.fecha_inicio_reporte')" class="fv-plugins-message-container invalid-feedback">{{ errors.first('formdatosreporte.fecha_inicio_reporte') }}</span>
                                            </div>
                                            <div class="col-lg-4 fv-row fv-plugins-icon-container">
                                                <label for="" class="form-label required fw-bold fs-6">Fecha Fin:</label>
                                                <input id="fecha_fin_reporte"
                                                       type="text"
                                                       name="fecha_fin_reporte"
                                                       placeholder="Seleccione una Fecha"
                                                       v-model="fecha_fin_reporte"
                                                       aria-describedby="fecha_fin_reporte"
                                                       autofocus=""
                                                       tabindex="1"
                                                       v-validate="'required|date_format:dd/MM/yyyy'"
                                                       v-bind:class="{'is-invalid': errors.has('formdatosreporte.fecha_fin_reporte') }"
                                                       class="form-control form-control-solid" />
                                                <span v-show="errors.has('formdatosreporte.fecha_fin_reporte')" class="fv-plugins-message-container invalid-feedback">{{ errors.first('formdatosreporte.fecha_fin_reporte') }}</span>
                                            </div>
                                            <div class="col-lg-4 fv-row fv-plugins-icon-container">
                                                <label for="" class="form-label required fw-bold fs-6">Categoria:</label>
                                                <select id="CategoriaReciclaje"
                                                        name="CategoriaReciclaje"
                                                        v-model="CategoriaReciclaje"
                                                        v-on:change="listar_Productos_Categorias(CategoriaReciclaje)"
                                                        v-bind:class="{'is-invalid': errors.has('formdatosreporte.CategoriaReciclaje')}"
                                                        class="form-select form-select-solid fw-bolder">
                                                    <option value="">--- Todo ---</option>
                                                    <option v-for="opcion in listarCategorias" :value="opcion.codigo_categoria">{{opcion.descripcion_categoria}}</option>
                                                </select>

                                                <span v-show="errors.has('formdatosreporte.CategoriaReciclaje')" class="fv-plugins-message-container invalid-feedback">{{ errors.first('formdatosreporte.CategoriaReciclaje') }}</span>
                                            </div>
                                        </div>
                                        <!--end::Row-->
                                    </div>
                                    <div class="col-lg-12">
                                        <!--begin::Row-->
                                        <div class="row">
                                            <!--begin::Col-->
                                            <div class="col-lg-4 fv-row fv-plugins-icon-container">
                                                <label for="" class="form-label required fw-bold fs-6">Materiales:</label>
                                                <select id="ProductoReciclaje"
                                                        name="ProductoReciclaje"
                                                        v-model="ProductoReciclaje"
                                                        v-bind:class="{'is-invalid': errors.has('formdatosreporte.ProductoReciclaje')}"
                                                        class="form-select form-select-solid fw-bolder">
                                                    <option value="">--- Todo ---</option>
                                                    <option v-for="opcion in listarProductos" :value="opcion.codigo_producto">{{opcion.descripcion_producto}}</option>
                                                </select>

                                                <span v-show="errors.has('formdatosreporte.ProductoReciclaje')" class="fv-plugins-message-container invalid-feedback">{{ errors.first('formdatosreporte.ProductoReciclaje') }}</span>
                                            </div>

                                            <!--begin::Col-->
                                            <div class="col-lg-4 fv-row fv-plugins-icon-container">
                                                <label for="" class="form-label required fw-bold fs-6">Tipo Reporte:</label>
                                                <select id="TipoReporteMateriales"
                                                        name="TipoReporteMateriales"
                                                        v-model="TipoReporteMateriales"
                                                        v-validate="'required'"
                                                        v-bind:class="{'is-invalid': errors.has('formdatosreporte.TipoReporteMateriales')}"
                                                        class="form-select form-select-solid fw-bolder">
                                                    <option value="">--- Seleccionar ---</option>
                                                    <option value="1">Reporte General</option>
                                                    <option value="2">Reporte Detallado</option>
                                                </select>
                                                <span v-show="errors.has('formdatosreporte.TipoReporteMateriales')" class="fv-plugins-message-container invalid-feedback">{{ errors.first('formdatosreporte.TipoReporteMateriales') }}</span>
                                            </div>
                                        </div>

                                        <!--end::Row-->
                                    </div>
                                    <!--end::Col-->

                                </div>
                                <!--end::Input group-->
                            </div>
                            <!--end::Card body-->
                            <!--begin::Actions-->
                            <div class="card-footer d-flex justify-content-end py-6 px-9">
                                <button type="submit" v-on:click.prevent="Obtener_Reporte_Categoria_Materiales" class="btn btn-primary">Consultar</button>

                                <button type="submit" class="btn btn-danger" v-on:click.prevent="Exportar_Obtener_Reporte_Categoria_Materiales">Exportar PDF</button>
                            </div>
                            <!--end::Actions-->
                            <input type="hidden"><div></div>
                        </form>
                        <!--end::Form-->
                    </div>
